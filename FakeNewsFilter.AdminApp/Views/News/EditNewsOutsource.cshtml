@model FakeNewsFilter.ViewModel.Catalog.NewsManage.NewsOutSourceUpdateRequest

@{
    ViewData["Title"] = "Update News";
}

<div id="updateNewsByOutsource" class="modal fade bd-example-modal-lg show" role="dialog" tabindex="-1" aria-hidden="true" style="display: none;">
    <form asp-action="UpdateNewsByOutSource" asp-controller="News" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id"/>
        <div class="modal-dialog modal-lg">
            >
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">
                        Update News Outsource
                    </h5>
                    <button aria-label="Đóng" class="close" data-dismiss="modal" type="button">
                        <span aria-hidden="true"> ×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" asp-for="Title" class="form-control border-start-0">
                    </div>
                    <div class="row">
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label for="publisher" class="form-label">Publisher</label>
                                <input type="text" asp-for="Publisher" class="form-control border-start-0" placeholder="Publisher"/>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label for="Source" class="form-label">Source</label>
                                <input type="text" asp-for="UrlNews" class="form-control border-start-0" placeholder="Source"/>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label for="ImageLink" class="form-label">ImageLink</label>
                                <input type="text" asp-for="ImageLink" class="form-control border-start-0" placeholder="ImageLink"/>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label for="official-rating" class="form-label">Official Rating</label>
                                <select type="text" class="form-control" asp-for="OfficialRating">
                                    <option value="undefined">Undefined</option>
                                    <option value="real">Real</option>
                                    <option value="fake">Fake</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label class="form-label" for="topic">Topic</label>
                                @foreach (var topicId in @ViewBag.ListNewsInTopicId)
                                {
                                    <input type="hidden" value="@topicId" class="news-in-topic-list-id"/>
                                }
                                <select id="select2-edit-outsource" class="select2 form-control" asp-for="TopicId" asp-items="@ViewBag.ListTopic" aria-invalid="false" multiple="multiple"></select>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label for="language" class="form-label">Language</label>
                                <select class="form-control" asp-for="LanguageId" asp-items="@ViewBag.ListLanguage" aria-invalid="false" placeholder="Language"></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="content" class="form-label">Description</label>
                            <textarea typeof="text" class="form-control border-start-0" asp-for="Description"> </textarea>
                        </div>
                    </div>
                    <input id="newsId" type="hidden" asp-for="Id" class="form-control border-start-0">
                    <div class="modal-footer">
                        <button class="btn btn-danger" data-dismiss="modal" type="button">Close</button>
                        <button class="btn btn-success" type="submit">Save change</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>