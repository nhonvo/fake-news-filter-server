@model FakeNewsFilter.ViewModel.Catalog.TopicNews.TopicCreateRequest


<div id="createTopic" class="modal fade bd-example-modal-lg show" role="dialog" tabindex="-1" style="padding-right: 15px; display: none;">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    Create Topic
                </h5>
                <button aria-label="Close" class="close" data-dismiss="modal" type="button"><span aria-hidden="true"> ×</span></button>
            </div>
            <div class="modal-body">
                <form asp-action="CreateNewTopic" asp-controller="Topic" method="post">
                    <div class="form-group">
                        <label class="form-label" for="basic-icon-default-fullname">Tag</label>
                        <input type="text" class="form-control dt-top-tag" asp-for="Tag" />
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="form-label" for="language">Content Language</label>
                                <select class="form-control" asp-for="LanguageId" asp-items="@ViewBag.ListLanguage" aria-invalid="false"></select>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="form-label" for="topic">Label</label>
                                <select class="form-control" asp-for="Label" asp-items="@ViewBag.ListLabel" aria-invalid="false"></select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="basic-icon-default-post">Description</label>
                        <textarea data-length="200" type="text" asp-for="Description" class="form-control char-textarea active" rows="3" id="field" onkeyup="countChar(this)"></textarea>
                        <small class="textarea-counter-value float-end" style="background-color: rgb(115, 103, 240);"><span class="char-count"  id="charNum">200</span></small>
                    </div>
                    <div class="form-group">
                        <div style="text-align: center">
                            <img id="create-topic-thumb" class="rounded me-2 my-25 cursor-pointer" height="120">
                            <div class="col-12 mt-1">
                                <label for="ThumbTopic" class="btn btn-primary me-75 mb-0 waves-effect waves-float waves-light">
                                    <span class="d-none d-sm-block">Choose Image</span>
                                    <input asp-for="ThumbTopic" class="btncreate-topic form-control" type="file" hidden="" accept="image/png, image/jpeg, image/jpg">
                                    <span class="d-block d-sm-none">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="10" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit me-0"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path></svg>
                                    </span>
                                </label>
                            </div>
                        </div>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-dismiss="modal" type="button"> Close</button>
                <button class="btn btn-primary" type="button" onclick="CreateTopic(document.querySelector('.modal-body > form'), event)"> Save changes</button>
            </div>
        </div>
    </div>
</div>
<script>
    function countChar(val) {
  var len = val.value.length;
  if (len >= 500) {
    val.value = val.value.substring(0, 500);
  } else {
    $('#charNum').text(200 - len);
  }
};
</script>