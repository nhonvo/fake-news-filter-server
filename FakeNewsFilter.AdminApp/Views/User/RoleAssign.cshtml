@model FakeNewsFilter.ViewModel.System.Users.RoleAssignRequest

@{
    ViewData["Title"] = "Role Assign";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">Users Manager</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item">
                    <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    <a asp-action="Index" asp-controller="User">List User</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
            </ol>
        </nav>
    </div>
</div>

<ul>
    @foreach (var error in ViewData.ModelState.SelectMany(x => x.Value.Errors))
    {
        <li style="list-style: none;">
            <div class="alert  border-0 border-start border-5 border-danger alert-dismissible fade show">
                <div>@error.ErrorMessage</div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </li>
    }
</ul>

<div class="card border-top border-0 border-4 border-success">
    <div class="card-body p-5">
        <div class="card-title d-flex align-items-center">
            <div>
                <i class="bx bxs-user me-1 font-22 text-success"></i>
            </div>
            <h5 class="mb-0 text-success">@ViewData["Title"].ToString().ToUpper()</h5>
        </div>
        <hr>
        <form class="row g-3" asp-action="RoleAssign" asp-controller="User" method="post">
            <input type="hidden" asp-for="Id" />
            @for (var i = 0; i < Model.Roles.Count; i++)
            {
                <div class="form-check form-switch">
                    <input type="checkbox" asp-for="Roles[i].Selected" class="form-check-input" />
                    <input type="hidden" asp-for="Roles[i].Id" />
                    <input type="hidden" asp-for="Roles[i].Name" />
                    <label class="form-check-label">@Model.Roles[i].Name</label>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Lưu lại" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>