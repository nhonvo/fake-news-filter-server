<div id="wrapper">
<section class="section single-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="page-wrapper">
                    <div class="blog-title-area text-center">
                        @foreach (var topic in @Model.TopicInfo)
                        {
                            <span class="color-orange">
                                <a href="#" title="">@topic.TopicName</a>
                            </span>
                        }

                        <h3>@Model.Title</h3>

                        <div class="blog-meta big-meta">
                            <small>
                                <a href="#" title="">@Model.Timestamp.ToString("dd/MM/yyyy hh:mm:ss")</a>
                            </small>
                            <small>
                                <a href="#" title="">@Model.Publisher</a>
