    @if (Model == null)
    {
        <h1> Khong co tin tuc nao </h1>
    }
    else
    {
        @foreach (var news in Model)
        {
            <article class="p-10 background-white border-radius-10 mb-30 wow fadeIn animated">
                <div class="d-flex">
                    <div class="post-thumb d-flex mr-15 border-radius-15 img-hover-scale">
                        <a class="color-white" href="single.html">
                            <img class="border-radius-15" src="@news.ThumbNews" alt="">
                        </a>
                    </div>
                    <div class="post-content media-body">
                        <div class="entry-meta mb-15 mt-10">
                            <a class="entry-meta meta-2" href="category.html">
                                @if (@news.TopicInfo != null)
                                {
                                    @foreach (var tag in @news.TopicInfo)
                                    {
                                        <span class="post-in text-danger font-x-small">@tag</span>
                                    }
                                }
                            </a>
                        </div>
                        <h5 class="post-title mb-15 text-limit-2-row">
                            <span class="post-format-icon">
                                <ion-icon name="videocam-outline"></ion-icon>
                            </span>
                            <a href="@news.URL">@news.Title</a>
                        </h5>
                        <div class="entry-meta meta-1 font-x-small color-grey float-left text-uppercase">
                            <span class="post-by">By <a href="author.html">@news.Publisher</a></span>
                            <span class="post-on">@news.Timestamp.ToString("dd/MM/yyyy")</span>
                            <span class="time-reading">12 mins read</span>
                        </div>
                    </div>
                </div>
            </article>
        }
    }
