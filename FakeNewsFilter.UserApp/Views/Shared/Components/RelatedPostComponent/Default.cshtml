@using FakeNewsFilter.ViewModel.Catalog.NewsManage
@model List<NewsViewModel>
@{
    var culture = CultureInfo.CurrentCulture.Name;
}
<h3 class="mb-30">Related posts</h3>
<div class="row">
    @foreach (var item in Model.Take(3))
    {
    var newUrl = "/chi-tiet/" + item.Title + "-" + item.NewsId;

        <article class="col-lg-4">
            <div class="background-white border-radius-10 p-10 mb-30">
                <div class="post-thumb d-flex mb-15 border-radius-15 img-hover-scale">
                    <a href="@newUrl">
                        <img class="border-radius-15" src="@item.ThumbNews" alt="">
                    </a>
                </div>
                <div class="pl-10 pr-10">
                    @foreach (var i in @item.TopicInfo)
                    {
                        <div class="entry-meta mb-15 mt-10">
                            <a class="entry-meta meta-2" href="category.html"><span class="post-in text-danger font-x-small">@i.TopicName</span></a>
                        </div>
                    }
                    <h5 class="post-title mb-15">
                        @*<span class="post-format-icon">
                            <ion-icon name="image-outline" role="img" class="md hydrated" aria-label="image outline"></ion-icon>
                        </span>*@
                        <a href="@newUrl">@item.Title</a>
                    </h5>
                    <div class="entry-meta meta-1 font-x-small color-grey float-left text-uppercase mb-10">
                        <span class="post-by">By <a href="#">@item.Publisher</a></span>
                        <span class="post-on">Update: @item.Timestamp.ToShortTimeString()</span>
                    </div>
                </div>
            </div>
        </article>
    }
</div>