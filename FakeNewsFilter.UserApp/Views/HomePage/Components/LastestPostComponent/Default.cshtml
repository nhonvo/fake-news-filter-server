@using FakeNewsFilter.ViewModel.Catalog.NewsManage
@model List<NewsViewModel>
@{
    var culture = CultureInfo.CurrentCulture.Name;
}
<div class="col-lg-6 col-md-6 col-sm-12">
    <div class="sidebar-widget">
        <div class="post-aside-style-2">
            <ul class="list-post">
                @foreach (var item in Model)
                {

                    <li class="mb-30 wow fadeIn animated">
                        <div class="d-flex">
                            <div class="post-thumb d-flex mr-15 border-radius-5 img-hover-scale">
                                <a class="color-white" asp-action="GetNewsById" asp-controller="News" asp-route-id="@item.NewsId">
                                    <img src="@item.ThumbNews" alt="@item.ThumbNews">
                                </a>
                            </div>
                            <div class="post-content media-body">
                                <h6 class="post-title mb-10 text-limit-2-row"><a asp-action="GetNewsById" asp-controller="News" asp-route-id="@item.NewsId">@item.Title</a></h6>
                                <div class="entry-meta meta-1 font-x-small color-grey float-left text-uppercase">
                                    <span><span class="mr-5"><i class="fa fa-eye" aria-hidden="true"></i></span>@item.ViewCount</span>
                                        <span class="ml-15"><span class="mr-5 text-muted"><i class="fa fa-comment" aria-hidden="true"></i></span>@item.OfficialRating</span>
                                        <span class="ml-15"><span class="mr-5 text-muted"><i class="fa fa-shiled" aria-hidden="true"></i></span>@item.SocialBeliefs</span>
                                </div>
                            </div>
                        </div>
                    </li>
                }

            </ul>
        </div>
    </div>
</div>