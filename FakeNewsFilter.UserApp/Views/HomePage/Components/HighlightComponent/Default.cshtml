@using FakeNewsFilter.ViewModel.Catalog.NewsManage
@model List<NewsViewModel>
@{
    var culture = CultureInfo.CurrentCulture.Name;
}
<div class="post-carausel-1-items mb-50">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="slider-single bg-white p-10 border-radius-15">
                <div class="img-hover-scale border-radius-10">
                    @*<span class="top-right-icon bg-dark"><i class="mdi mdi-flash-on"></i></span>*@
                    <a asp-action="GetNewsById" asp-controller="News" asp-route-id="@item.NewsId">
                        <img class="border-radius-10" src="@item.ThumbNews" alt="post-slider">
                    </a>
                </div>
                <h6 class="post-title pr-5 pl-5 mb-10 mt-15 text-limit-2-row">
                    <a asp-action="GetNewsById" asp-controller="News" asp-route-id="@item.NewsId">@item.Title</a>
                </h6>
                <div class="entry-meta meta-1 font-x-small color-grey float-left text-uppercase pl-5 pb-15">
                    <span class="post-on">@item.Publisher</span>
                    <span class="post-by"><a href="author.html">@item.Timestamp.ToShortTimeString()</a></span>
                </div>
            </div>
        </div>
    }
</div>